{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "controllers/**/*.ts",
    "middlewares/**/*.ts",
    "config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
